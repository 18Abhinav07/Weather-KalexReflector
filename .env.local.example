# KALE Weather Farming System - Local Development Configuration
# Copy this file to .env.local for local development

NODE_ENV=development
LOG_LEVEL=debug

# Local Server
PORT=3000
HOST=localhost
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Local Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kale_weather_farming_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Testnet Configuration
STELLAR_NETWORK=testnet
STELLAR_RPC_URL=https://horizon-testnet.stellar.org
STELLAR_CONTRACT_ID=your-testnet-contract-id
KALE_TOKEN_ADDRESS=your-testnet-kale-token-address

# Weather APIs (get free keys from respective services)
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHERAPI_KEY=your-weatherapi-key  
VISUAL_CROSSING_API_KEY=your-visual-crossing-api-key

# Development Settings
ENABLE_DEBUG_ENDPOINTS=true
DETAILED_LOGGING=true
